<Page
    x:Class="TeamsCallNotification.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TeamsCallNotification"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button Content="Auth" Margin="0,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="AuthButton_Click" Height="55" Width="200" FontSize="20"/>
        <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Center" Height="432" Margin="0,150,0,0" TextWrapping="Wrap" Text="Click 'Auth' to login." VerticalAlignment="Top" Width="864" FontSize="20"/>
    </Grid>
</Page>
